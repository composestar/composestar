<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.1"?>
<plugin>

	--------------------------------------------------
							UI
	--------------------------------------------------
  	<extension point="org.eclipse.ui.preferencePages">
 		<page
 			id="composestareclipseplugin.ui.preferencepage"
 			name="%COMPOSESTAR_NAME"
 			class="ComposestarEclipsePlugin.Java.UI.JavaComposestarPreferencePage">
 		</page>
 	</extension>

 	<extension point="org.eclipse.ui.propertyPages">
 		<page
 			id="composestareclipseplugin.ui.propertypage"
 			name="%COMPOSESTAR_NAME"
 			objectClass="org.eclipse.core.resources.IProject"
 			class="ComposestarEclipsePlugin.Java.UI.JavaComposestarPropertyPage"
 			adaptable="true">
 		</page>
 	</extension>

 	<extension point="org.eclipse.ui.popupMenus">
      <objectContribution
            objectClass="org.eclipse.core.resources.IProject"
            adaptable="true"
            id="composestarbuild">
        <menu
        	id="cstarpopup"
       		label="%COMPOSESTAR_NAME"
       		path="additions">
       		<separator name="slot1"/>
       	</menu>
       	<action
            label="Run"
            menubarPath="cstarpopup/slot1" 
            class="ComposestarEclipsePlugin.Java.Actions.JavaRunAction"
            enablesFor="1"
            id="composestar.run">
        </action>
        <action
            label="Build"
            menubarPath="cstarpopup/slot1" 
            class="ComposestarEclipsePlugin.Java.Actions.JavaBuildAction"
            enablesFor="1"
            id="composestar.build">
        </action>
      </objectContribution>
    </extension>
    
    -------------------------------------------------
					Headless Mode
	------------------------------------------------- 
    <extension
        id="testbuild"
        point="org.eclipse.core.runtime.applications">
      	<application> 
         	<run class="ComposestarEclipsePlugin.Java.Actions.TestBuild"> 
         	</run> 
      	</application>
   	</extension>

	<extension
        id="testrun"
        point="org.eclipse.core.runtime.applications">
      	<application> 
         	<run class="ComposestarEclipsePlugin.Java.Actions.TestRun"> 
         	</run> 
      	</application>
   	</extension>
   	
</plugin>
