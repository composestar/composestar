<?xml version="1.0" encoding="UTF-8"?>
<modules xmlns="http://composestar.sourceforge.net/schema/ModuleInfo">
	<moduleinfo id="SEMTEX" class="Composestar.DotNET.SEMTEX.DotNETSemTexRunner">
		<description>
			This module reads the assemblies created by the weaver, creates a semantic meta model and extracts specific
			information from this model.
		</description>
		<incre>
			<module phase="two" enabled="true" incremental="true" summary="Collecting semantic information...">
				<dependencies>
					<dependency type="FILE" name="assembly"></dependency>
				</dependencies>
			</module>
		</incre>
	</moduleinfo>

	<moduleinfo id="SEMTEXCollector" class="Composestar.DotNET.SEMTEX.DotNETSemTexCollector">
		<description>
			This module parses the XML file generated by SEMTEX and adds the information to the repository.
		</description>
		<incre>
			<module phase="two" enabled="true" incremental="true" summary="Importing semantic information...">
				<dependencies>
					<dependency type="FILE" name="assembly"></dependency>
				</dependencies>
			</module>
		</incre>
	</moduleinfo>
</modules>
