<?xml version="1.0" encoding="UTF-8"?>
<project name="antdotnet_utils" xmlns:dn="antlib:org.apache.ant.dotnet">

	<target name="dotnetenv" description="Create the dotnetenv.properties file" if="enabled.starlight">
		<condition property="osfamily.windows">
			<os family="windows" />
		</condition>
		<antcall target="-dotnetenv_windows" inheritall="true" inheritrefs="true" />
	</target>

	<target name="-dotnetenv_windows" if="osfamily.windows">
		<delete file="${basedir}/dotnetenv.properties" />
		<dn:msbuild>
			<property name="StarlightBasedir" value="${build.starlight}" />
			<property name="StarlightVersion" value="${version.starlight}" />
			<property name="PropertyFile" value="${basedir}\dotnetenv.properties" />
			<build>
				<Project DefaultTargets="dotnetenv" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
					<PropertyGroup>
						<MSBuildCommunityTasksPath Condition="'$(MSBuildCommunityTasksPath)' == ''">$(StarlightBasedir)\Development\MSBuildCommunityTasks</MSBuildCommunityTasksPath>
					</PropertyGroup>
					<Import Project="$(MSBuildCommunityTasksPath)\MSBuild.Community.Tasks.Targets" />

					<Target Name="dotnetenv">
						<Error Text="The StarlightVersion property is not set." Condition="$(StarlightVersion) == ''" />
						<RegistryRead KeyName="HKEY_LOCAL_MACHINE\Software\Composestar\StarLight" ValueName="CurrentVersion">
							<Output TaskParameter="Value" PropertyName="CurrentStarlightVersion" />
						</RegistryRead>

						<RegistryRead KeyName="HKEY_LOCAL_MACHINE\Software\Composestar\Starlight\$(CurrentStarlightVersion)" ValueName="StarLightInstallFolder" DefaultValue="$(ProgramFiles)\StarLight" Condition="$(StarlightVersion) == $(CurrentStarlightVersion)">
							<Output TaskParameter="Value" PropertyName="StarLightInstallFolder" />
						</RegistryRead>
						<RegistryRead KeyName="HKEY_LOCAL_MACHINE\Software\Composestar\StarLight\$(CurrentStarlightVersion)" ValueName="WeaveStrategiesFolder" DefaultValue="$(ProgramFiles)\StarLight\WeaveStrategies\" Condition="$(StarlightVersion) == $(CurrentStarlightVersion)">
							<Output TaskParameter="Value" PropertyName="WeaveStrategiesFolder" />
						</RegistryRead>
						
						<!--
						<Message Text="CurrentStarlightVersion = $(CurrentStarlightVersion)" />
						<Message Text="InstallFolder = $(StarLightInstallFolder)" />
						<Message Text="StrategiesFolder = $(WeaveStrategiesFolder)" />
						-->
						
						<WriteLinesToFile File="$(PropertyFile)" Lines="starlight.installdir=$(StarLightInstallFolder)" Overwrite="false" Condition="$(StarLightInstallFolder) != ''" />
						<WriteLinesToFile File="$(PropertyFile)" Lines="starlight.strategiesdir=$(WeaveStrategiesFolder)" Overwrite="false" Condition="$(WeaveStrategiesFolder) != ''"/>
					</Target>
				</Project>
			</build>
		</dn:msbuild>
	</target>

</project>
